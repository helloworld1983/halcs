# hutils cmake module
#
# The following import targets are created
#
# ::
#
#   hutils-static
#   hutils
#
# This module sets the following variables in your project::
#
#   hutils_FOUND - true if hutils found on the system
#   hutils_INCLUDE_DIR - the directory containing hutils headers
#   hutils_LIBRARY -
#   hutils_STATIC_LIBRARY

@PACKAGE_INIT@

if(NOT TARGET hutils AND NOT TARGET hutils-static)
    include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")

    if (TARGET hutils)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR
            hutils
            INTERFACE_INCLUDE_DIRECTORIES
        )
    else ()
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR
            hutils-static
            INTERFACE_INCLUDE_DIRECTORIES
        )
    endif()

    if (TARGET hutils)
        get_target_property(@PROJECT_NAME@_LIBRARY
            hutils LOCATION
        )
    endif()
    if (TARGET hutils-static)
        get_target_property(@PROJECT_NAME@_STATIC_LIBRARY
            hutils-static LOCATION
        )
    endif()
endif()
